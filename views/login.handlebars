<div class="container">
    <div class="row justify-content-center p-5 mt-5">
        <div class="col-md-8 col-sm-12">
            {{#if message}}
                <p>{{this.message}}</p>
            {{/if}}
            <div class="container border rounded p-5" style="max-width: 400px;">
                <h1 class="text-center mb-4">Sign In</h1>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group mb-4">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <button class="btn btn-outline-info btn-block my-2" type="submit">Log in</button>
                    <p class="text-center m-2">Not a member? <a href="/register">Register</a></p>
                </form>
                
            </div>
            
        </div>
    </div>
</div>